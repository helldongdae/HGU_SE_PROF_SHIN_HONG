<project name = "Markdown_SE_TermProject" default = "compile" basedir = ".">

   <description>
      markdown build project   
   </description>
   <property name="src" location="src"/>
   <property name="lib" location="lib"/>
   <property name="bin" location="bin"/>
   <property name="doc" location="doc"/>
   <property name="build" location="build"/>
   <!--delete exist directories to initiate the workspace-->
   <target name="clean">
      <delete dir = "${bin}"></delete>
      <delete dir = "${src}"></delete>
      <delete dir = "${lib}"></delete>
      <delete dir = "${doc}"></delete>
      <delete dir = "${build}"></delete>
   </target>
   
   <!--make directories for a new compilation-->
   <target name="create" depends = "clean">
      <mkdir dir="${bin}"/>
      <mkdir dir="${src}"/>
      <mkdir dir="${lib}"/>
      <mkdir dir="${doc}"/>
      <mkdir dir="${build}"/>
   </target>
      
   <!--compile java sources-->
   <target name="compile" depends = "create">
      <javac includeantruntime= "true" srcdir= "${src}" destdir= "${build}" includes="**/*.jar"></javac>
   </target>

   <!--generate HTML Doc-->
   <target name="generateDoc" depends = "compile">
      <javadoc scrdir= "${src}" destdir= "${doc}"/>
   </target>

   
</project>